# =============================================================================
# Open Deep Research - Environment Configuration (Google Models Only)
# =============================================================================

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Google API Key (Required for all models)
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=

# Tavily Search API Key (Required for search functionality)
# Get from: https://tavily.com/
TAVILY_API_KEY=

JINA_API_KEY=

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# LangSmith Configuration (Optional - for tracing and evaluation)
# Get from: https://smith.langchain.com/
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=open-deep-research
LANGSMITH_API_KEY=

# =============================================================================
# MODEL CONFIGURATION - ALL GOOGLE GEMINI MODELS
# =============================================================================

# # Research Model (Google Gemini 1.5 Pro - best for research tasks)
# RESEARCH_MODEL=google_genai:gemini-2.5-pro

# # Summarization Model (Google Gemini 1.5 Flash- faster for summarization)
# SUMMARIZATION_MODEL=google_genai:gemini-2.0-flash

# # Compression Model (Google Gemini 1.5 Flash - efficient for compression)
# COMPRESSION_MODEL=google_genai:gemini-2.0-flash

# # Final Report Model (Google Gemini 1.5 Pro - best for final report generation)
# FINAL_REPORT_MODEL=google_genai:gemini-2.0-flash

# Research Model (Google Gemini 1.5 Pro - best for research tasks)
RESEARCH_MODEL=openrouter:openai/gpt-4o-mini

# Summarization Model (Google G emini 1.5 Flash- faster for summarization)
SUMMARIZATION_MODEL=openrouter:openai/gpt-4o-mini

# Compression Model (Google Gemini 1.5 Flash - efficient for compression)
COMPRESSION_MODEL=openrouter:openai/gpt-4o-mini

# Final Report Model (Google Gemini 1.5 Pro - best for final report generation)
FINAL_REPORT_MODEL=openrouter:openai/gpt-4o-mini

OPENROUTER_API_KEY=

# =============================================================================
# SEARCH API CONFIGURATION
# =============================================================================

# Search API to use (options: tavily, openai, anthropic, jina, none)
SEARCH_API=jina

# =============================================================================
# RESEARCH CONFIGURATION
# =============================================================================

# Maximum concurrent research units (default: 5)
MAX_CONCURRENT_RESEARCH_UNITS=5

# Maximum researcher iterations (default: 6)
MAX_RESEARCHER_ITERATIONS=6

# Maximum tool calls per researcher (default: 10)
MAX_REACT_TOOL_CALLS=10

# Allow clarification questions (default: true)
ALLOW_CLARIFICATION=true

# Maximum content length for webpages (default: 50000)
MAX_CONTENT_LENGTH=50000

SCRAPER_URL=http://localhost:3000/api/

# =============================================================================
# TOKEN LIMITS - OPTIMIZED FOR GEMINI MODELS
# =============================================================================

# Research model max tokens (Gemini 1.5 Pro supports up to 2M tokens)
RESEARCH_MODEL_MAX_TOKENS=100000

# Summarization model max tokens (Gemini 1.5 Flash supports up to 1M tokens)
SUMMARIZATION_MODEL_MAX_TOKENS=100000

# Compression model max tokens (Gemini 1.5 Flash supports up to 1M tokens)
COMPRESSION_MODEL_MAX_TOKENS=100000

# Final report model max tokens (Gemini 1.5 Pro supports up to 2M tokens)
FINAL_REPORT_MODEL_MAX_TOKENS=100000

# =============================================================================
# MCP CONFIGURATION (Optional - for Model Context Protocol tools)
# =============================================================================

# MCP Server URL (if using MCP tools)
# MCP_CONFIG_URL=your_mcp_server_url_here

# MCP Tools to enable (comma-separated list)
# MCP_CONFIG_TOOLS=tool1,tool2,tool3

# MCP Authentication required (true/false)
# MCP_CONFIG_AUTH_REQUIRED=false

# MCP Prompt for additional instructions
# MCP_PROMPT=Additional instructions for MCP tools

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Maximum structured output retries (default: 3)
MAX_STRUCTURED_OUTPUT_RETRIES=3

# Get API keys from config instead of environment (true/false)
GET_API_KEYS_FROM_CONFIG=false

# Tool Toggles - Disable unreliable tools
ENABLE_JINA_READER=false
ENABLE_SCRAPING_TOOL=false
